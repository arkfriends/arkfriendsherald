<h1>Listing newsitems</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Filename</th>
      <th>Filetype</th>
      <th>Priority</th>
      <th>Zone</th>
      <th>Duration</th>
      <th>Starting</th>
      <th>Ending</th>
      <th>Staff</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @newsitems.each do |newsitem| %>
      <tr>
        <td><%= newsitem.title %></td>
        <td><%= newsitem.filename %></td>
        <td><%= newsitem.filetype_id %></td>
        <td><%= newsitem.priority %></td>
        <td><%= newsitem.zone_id %></td>
        <td><%= newsitem.duration %></td>
        <td><%= newsitem.starting %></td>
        <td><%= newsitem.ending %></td>
        <td><%= newsitem.staff_id %></td>
        <td><%= link_to 'Show', newsitem %></td>
        <td><%= link_to 'Edit', edit_newsitem_path(newsitem) %></td>
        <td><%= link_to 'Destroy', newsitem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Newsitem', new_newsitem_path %>
